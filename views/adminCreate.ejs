<!DOCTYPE html>
<html>
  <head>
    <title>Create</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>

    <form>
      <div class="create-st">
        <table>
          <tr>
            <td>name:</td>
            <td><input type="text" name="name" required></td>
          </tr>
          <tr>
            <td>surname:</td>
            <td><input type="text" name="surname" required></td>
          </tr>
          <tr>
            <td>gender:</td>
            <td>
              <select name="gender">
              <option></option>
              <option value="Male">Male</option>
              <option value="Female">Female</option>
            </select>
          </td>
          </tr>
          <tr>
            <td>birthDate:</td>
            <td><input type="date" name="birthDate"></td>
          </tr>
          <tr>
            <td>age:</td>
            <td><input type="number" name="age"></td>
          </tr>
          <tr>
            <td>adress:</td>
            <td> <input type="text" name="adress"></td>
          </tr>
          <tr>
            <td>father:</td>
            <td><input type="text" placeholder="name" name="fatherName"></td>
            <td><input type="text" placeholder="surname" name="fatherSurname"></td>
            <td><input type="text" placeholder="number" name="fatherNumber"></td>
          </tr>
          <tr>
            <td>mother:</td>
            <td><input type="text" placeholder="name" name="motherName"></td>
            <td><input type="text" placeholder="surname" name="motherSurname"></td>
            <td><input type="text" placeholder="number" name="motherNumber"></td>
          </tr>
          <tr>
            <td>class:</td>
            <td>
              <select name="class">
                <option></option>
                <option value="Math">Math</option>
                <option value="Filology">Filology</option>
                <option value="Nature">Nature</option>    
              </select>
            </td>
          </tr>
          <tr>
            <td>class number:</td>
            <td><input type="text" name="classNumber"></td>
          </tr>
        </table>
        
        <div class="button">
          <div>
            <a href="/admin/create">
              <button class="button-click" type="submit" >OK</button>
            </a><br>
            <div class="btn-back">
              <a href="/admin" class="btn btn3">Back</a>
          </div>
          </div>         
        </div>
      </div>
      <div class="answer"></div>
      
    </form>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.24.0/axios.js"></script>
    <script src="/js/main.js"></script>
  </body>
</html>
